# =====================================================================
# QUICKNODE PRODUCTION CONFIGURATION
# =====================================================================
#
# SETUP INSTRUCTIONS:
# 1. Go to https://quicknode.com and create account
# 2. Create a Solana Mainnet endpoint
# 3. Enable "Yellowstone gRPC" add-on ($499/month plan)
# 4. Copy your HTTP RPC URL and paste below
# 5. Copy your gRPC endpoint and paste below
# 6. Rename this file to .env
# 7. Run: npm run hft
#
# =====================================================================

# =====================================================================
# QUICKNODE RPC (Primary - for transactions)
# =====================================================================
# Format: https://solana-mainnet.quiknode.pro/YOUR_API_KEY/
# Example: https://solana-mainnet.quiknode.pro/abc123def456/
RPC_URL=https://solana-mainnet.quiknode.pro/YOUR_QUICKNODE_API_KEY_HERE/

# =====================================================================
# QUICKNODE YELLOWSTONE gRPC (Primary - for real-time streaming)
# =====================================================================
# Format: grpc.quicknode.pro:YOUR_PORT
# Example: grpc.quicknode.pro:443
# Your QuickNode dashboard will show exact endpoint
QUICKNODE_GRPC_ENDPOINT=grpc.quicknode.pro:443
QUICKNODE_GRPC_TOKEN=YOUR_QUICKNODE_GRPC_TOKEN_HERE
USE_QUICKNODE_GRPC=true

# =====================================================================
# BACKUP RPC (Optional - Helius/Triton for redundancy)
# =====================================================================
# Uncomment and add backup RPC if you want failover
# HELIUS_RPC=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY
# TRITON_RPC=https://mainnet.rpc.triton.one/?api-key=YOUR_TRITON_KEY

# =====================================================================
# WALLET SETTINGS (Update with your wallet path)
# =====================================================================
WALLET_PATH=C:\solana\my_wallet.json
WALLET_ADDRESS=6s58AbynyDGYrtqF5h1wnoiyicwZK1VHPYeLrx1pCU2p

# =====================================================================
# TRADING SETTINGS - HFT OPTIMIZED
# =====================================================================
# Trade size in USD (QuickNode can handle large volumes)
TRADE_USD=100

# Minimum profit after ALL fees (start conservative)
MIN_PROFIT_USDC=0.05

# Trading mode
DRY_RUN=false
SWAP_MODE=ATOMIC

# Test swap on startup (validates setup)
# Set to false after first successful test
BOT_SWAP_CHECK=true

# =====================================================================
# SLIPPAGE & FEES - HFT SETTINGS
# =====================================================================
MAX_SLIPPAGE_PCT=0.005
WARNING_SLIPPAGE_PCT=0.003
OPTIMAL_SLIPPAGE_PCT=0.002

# Priority fees for HFT (higher = faster execution)
# QuickNode Build plan: 50k-100k microLamports recommended
# QuickNode Discover: 100k-200k microLamports for maximum speed
BASE_PRIORITY_FEE_LAMPORTS=100000
MAX_PRIORITY_FEE_LAMPORTS=200000

# =====================================================================
# SAFETY SETTINGS
# =====================================================================
ENABLE_EMERGENCY_STOP=true
MIN_SOL_BALANCE_CRITICAL=0.01
MAX_NETWORK_FEE_USD=0.50

# =====================================================================
# ADVANCED SETTINGS (Don't change unless needed)
# =====================================================================
POLL_INTERVAL=0.1
MIN_LIQUIDITY_USD=5000
MAX_TRADE_TO_LIQUIDITY_RATIO=0.01
MAX_PRICE_IMPACT_PCT=0.02
WARNING_PRICE_IMPACT_PCT=0.01
EMERGENCY_PRICE_IMPACT_PCT=0.05
MAX_QUOTE_AGE_SECONDS=2
QUOTE_REVALIDATION_THRESHOLD_PCT=0.002
MIN_TIME_BETWEEN_QUOTES_MS=100

# =====================================================================
# LEGACY SETTINGS (Ignored when using QuickNode)
# =====================================================================
HELIUS_GRPC_ENDPOINT=grpc.solanavibestation.com:10000
HELIUS_API_KEY=dummy
USE_HELIUS_GRPC=false
USE_HELIUS_PRIVATE_TX=false
EXECUTION_MODE=QUICKNODE
